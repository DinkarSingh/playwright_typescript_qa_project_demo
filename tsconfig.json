{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["ES6", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "paths": {
      "@support/*": ["./support/*"],
      "@services/*": ["./services/*"]
    }
  },
  "include": ["tests/**/*.ts", "data/**/*.ts"],
  "exclude": ["node_modules"]
}
